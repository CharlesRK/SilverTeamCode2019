                foundationR.setPosition(1);
            }
            if (gamepad1.right_trigger > 0.15){
                foundationL.setPosition(0);
                foundationR.setPosition(0);
            }

            //pusher
            if (gamepad2.x){
                pusher.setPower(1);
            } else if (gamepad2.y){
                pusher.setPower(-1);
            } else {
                pusher.setPower(0);
            }


            //

            */





        }
    }

   }
   }



